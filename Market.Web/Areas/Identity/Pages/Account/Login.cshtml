@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="fw-bold mb-0">Witaj ponownie</h3>
                    <p class="mb-0 opacity-75">Zaloguj się do swojego konta</p>
                </div>
                
                <div class="card-body p-4 p-md-5">
                    <section>
                        <form id="account" method="post">
                            
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display:none;" 
                                 onload="if(this.innerHTML.trim().length > 0) this.style.display='block';"></div>
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger shadow-sm border-0 mb-4">
                                    <div asp-validation-summary="ModelOnly" class="text-danger list-unstyled mb-0"></div>
                                </div>
                            }
                            <div class="mb-0">
                                <label asp-for="Input.Email" class="form-label text-secondary fw-bold small">Adres e-mail</label>
                                <input asp-for="Input.Email" class="form-control form-control-lg rounded-3" autocomplete="username" aria-required="true" placeholder="np. nazwa@przyklad.pl" />
                                <span asp-validation-for="Input.Email" class="text-danger small ps-1"></span>
                            </div>
                            
                            <!-- Zmiana: Usunięto 'form-floating', label wrzucony nad input -->
                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label text-secondary fw-bold small">Hasło</label>
                                <input asp-for="Input.Password" class="form-control form-control-lg rounded-3" autocomplete="current-password" aria-required="true" placeholder="Wpisz swoje hasło" />
                                <span asp-validation-for="Input.Password" class="text-danger small ps-1"></span>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label small text-muted" asp-for="Input.RememberMe">
                                        Zapamiętaj mnie
                                    </label>
                                </div>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="small text-decoration-none fw-bold">Zapomniałeś hasła?</a>
                            </div>

                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary rounded-pill fw-bold mb-3 shadow-sm">
                                Zaloguj się
                            </button>

                            <div class="text-center mt-3">
                                <span class="text-muted small">Nie masz jeszcze konta?</span>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold ms-1">Zarejestruj się</a>
                            </div>
                            
                            <div class="text-center mt-2">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="small text-muted text-decoration-underline">Nie otrzymałeś e-maila weryfikacyjnego?</a>
                            </div>
                        </form>
                    </section>

                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <div class="position-relative my-4">
                            <hr class="text-muted opacity-25">
                            <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 small text-muted">LUB</span>
                        </div>

                        <section>
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                                <div class="d-grid gap-2">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-outline-secondary rounded-pill" name="provider" value="@provider.Name" title="Zaloguj używając konta @provider.DisplayName">
                                            <i class="bi bi-box-arrow-in-right me-2"></i>Kontynuuj przez @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        </section>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}