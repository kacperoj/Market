<script>
    <meta name="robots" content="noindex, nofollow"/>
    function copyToClipboard(element) {
        navigator.clipboard.writeText(element.value);
        triggerVisualFeedback(element);
    }

    function revealRot13(element) {
        
        const encoded = element.getAttribute('data-rot13');
        if (!encoded) return;

        const decoded = encoded.replace(/[a-zA-Z]/g, function (char) {
            var base = char <= 'Z' ? 65 : 97;
            return String.fromCharCode((char.charCodeAt(0) - base + 13) % 26 + base);
        });

        element.value = decoded;
        element.type = "text"; 

        navigator.clipboard.writeText(decoded);

        triggerVisualFeedback(element, true);

        setTimeout(() => {
            element.value = "••••••••";
            element.classList.remove('text-success', 'fw-bold');
            element.classList.add('text-white');
        }, 3000);
    }

    function triggerVisualFeedback(element, isSuccess = false) {
        const originalClass = element.className;
        
        if (isSuccess) {
            element.classList.remove('text-white');
            element.classList.add('text-success', 'fw-bold');
        } else {
            element.style.backgroundColor = "rgba(13, 110, 253, 0.2)";
            setTimeout(() => {
                element.style.backgroundColor = ""; 
            }, 200);
        }
    }
</script>