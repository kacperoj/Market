@model Market.Web.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Podsumowanie Zakupu";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="mb-4"><i class="bi bi-cart-check me-2"></i>Podsumowanie zamówienia</h2>

            <!-- 1. PRZEDMIOT ZAKUPU -->
            <div class="card shadow-sm mb-4">
                <div class="card-header fw-bold">1. Przedmiot zakupu</div>
                <div class="card-body">
                    <div class="d-flex gap-3 align-items-center">
                        <!-- Wyświetlanie zdjęcia -->
                        <img src="@Model.ImageUrl" class="rounded object-fit-cover border" style="width: 80px; height: 80px;" alt="Zdjęcie produktu">
                        
                        <div class="flex-grow-1">
                            <h5 class="card-title fw-bold mb-1">@Model.AuctionTitle</h5>
                            <p class="text-muted small mb-1">
                                Sprzedający: <strong>@Model.SellerName</strong>
                            </p>
                            
                            @if(Model.IsCompanySale)
                            {
                                 <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                     <i class="bi bi-receipt"></i> Wystawia fakturę VAT
                                 </span>
                            }
                            else
                            {
                                 <span class="badge bg-secondary bg-opacity-10 text-secondary border">
                                     <i class="bi bi-person"></i> Sprzedaż prywatna
                                 </span>
                            }
                        </div>
                        
                        <div class="text-end">
                            <span class="h4 text-primary fw-bold">@Model.Price.ToString("N2") zł</span>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="PlaceOrder" method="post" id="orderForm">
                <input type="hidden" asp-for="AuctionId" />

                <!-- 2. ADRES DOSTAWY -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header fw-bold">2. Adres dostawy</div>
                    <div class="card-body">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-geo-alt fs-4 me-3 text-secondary"></i>
                            <div>
                                <p class="mb-1 fw-bold fs-5">@Model.BuyerName</p>
                                <p class="mb-0">@Model.ShippingAddress.Street</p>
                                <p class="mb-0">@Model.ShippingAddress.PostalCode @Model.ShippingAddress.City</p>
                                <p class="mb-0 text-muted small">@Model.ShippingAddress.Country</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 3. DANE DO FAKTURY -->
                <div class="card shadow-sm mb-4 border-warning">
                    <div class="card-header bg-warning bg-opacity-10 d-flex justify-content-between align-items-center">
                        <span class="fw-bold">3. Dane do faktury (Opcjonalne)</span>
                    </div>
                    
                    <div class="card-body">
                        <div class="form-check ms-1">
                            <input class="form-check-input" type="checkbox" asp-for="WantsInvoice" id="invoiceCheck" 
                                   disabled="@(!Model.BuyerHasCompanyProfile ? "disabled" : null)">
                            <label class="form-check-label fw-bold" for="invoiceCheck">
                                Chcę otrzymać fakturę VAT (Zakup na firmę)
                            </label>
                        </div>
                        
                        @if(!Model.BuyerHasCompanyProfile)
                        {
                            <div class="mt-2 ms-4 small text-danger">
                                <i class="bi bi-exclamation-circle"></i> Opcja niedostępna. Aby kupić na firmę, musisz najpierw 
                                <a asp-controller="Profile" asp-action="EditProfile" target="_blank" class="text-danger fw-bold text-decoration-underline">uzupełnij dane w profilu</a>.
                            </div>
                        }
                        else
                        {
                            <!-- Kontener z danymi, pokazywany JS -->
                            <div id="companyDetails" class="mt-3 ps-4 border-start border-warning border-3" style="display:none;">
                                <div class="text-muted small text-uppercase fw-bold mb-1">Dane płatnika:</div>
                                <div class="fw-bold">@Model.BuyerCompanyName</div>
                                <div>NIP: <span class="font-monospace">@Model.BuyerNIP</span></div>
                                <div class="small text-muted mt-1">
                                    @Model.BuyerInvoiceAddress?.Street, @Model.BuyerInvoiceAddress?.PostalCode @Model.BuyerInvoiceAddress?.City
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- PODSUMOWANIE I ACTION -->
                <div class="card shadow-sm border-0 bg-transparent">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg py-3 fw-bold shadow-sm">
                            <i class="bi bi-bag-check-fill me-2"></i> Potwierdzam zakup i płacę
                        </button>
                        <a asp-controller="Auctions" asp-action="Details" asp-route-id="@Model.AuctionId" class="btn btn-secondary">
                            Anuluj i wróć do aukcji
                        </a>
                    </div>
                    <p class="text-center text-muted small mt-2">
                        Klikając przycisk zawierasz prawnie wiążącą umowę kupna-sprzedaży.
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const checkbox = document.getElementById('invoiceCheck');
            const details = document.getElementById('companyDetails');
            
            if(checkbox && details) {
                function toggleDetails() {
                    details.style.display = checkbox.checked ? 'block' : 'none';
                }

                checkbox.addEventListener('change', toggleDetails);
                
                toggleDetails();
            }
        });
    </script>
}