@model Market.Web.Models.Auction
@{ ViewData["Title"] = "Edytuj Aukcję"; }

<link rel="stylesheet" href="~/css/auctions-form.css" asp-append-version="true" />

<div class="container mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">Edytuj Ofertę</h2>
            <small class="text-secondary">Zaktualizuj zdjęcia i opis</small>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-lg"></i> Anuluj
        </a>
    </div>

    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />

        <!-- GALERIA SWIPER (Z widocznym kontenerem jeśli są zdjęcia) -->
        <div id="galleryContainer" class="@(Model.Images != null && Model.Images.Any() ? "" : "d-none") mb-4">
            
            <!-- GŁÓWNY SLIDER -->
            <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper mySwiper2 rounded border border-secondary mb-2">
                <div class="swiper-wrapper" id="mainSwiperWrapper">
                    <!-- PĘTLA GENERUJĄCA ZDJĘCIA Z BAZY -->
                    @if (Model.Images != null)
                    {
                        foreach (var img in Model.Images)
                        {
                            <div class="swiper-slide">
                                <img src="@img.ImagePath" />
                            </div>
                        }
                    }
                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>

            <!-- MINIATURY -->
            <div thumbsSlider="" class="swiper mySwiper">
                <div class="swiper-wrapper" id="thumbSwiperWrapper">
                     @if (Model.Images != null)
                    {
                        foreach (var img in Model.Images)
                        {
                            <div class="swiper-slide border border-secondary">
                                <img src="@img.ImagePath" style="object-fit: contain;" />
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- DODAWANIE NOWYCH ZDJĘĆ -->
        <div class="row g-3 mb-4"> 
            <div class="col-12">
                <label class="form-label fw-bold">Zdjęcia przedmiotu</label>
                <!-- WAŻNE: id="photosInput" pozwala na podpięcie JS -->
                <input type="file" name="photos" id="photosInput" class="form-control bg-dark text-light border-secondary" multiple accept="image/*" />
                <div class="form-text text-secondary">
                    Wybranie nowych plików zastąpi tymczasowo podgląd, ale stare zdjęcia zostaną zachowane na serwerze, dopóki ich nie usuniesz (funkcja todo).
                </div>
            </div>
            <!-- BRAK BUTTONA AI - ZGODNIE Z ŻYCZENIEM -->
        </div>

        <!-- BAZOWE POLA -->
        <partial name="_AuctionFormFields" model="Model" />

        <div class="row mt-4">
            <div class="col-12">
                <button type="submit" class="btn btn-success btn-lg w-100 py-3 fw-bold">
                    <i class="bi bi-check-lg"></i> Zapisz zmiany
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/auction-edit.js" asp-append-version="true"></script> 
}