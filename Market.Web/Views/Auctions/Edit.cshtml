@model Market.Web.Models.Auction

@{
    ViewData["Title"] = "Edytuj Aukcję";
}

<div class="container mt-4">
    <h2>Edytuj ogłoszenie</h2>
    <hr />
    
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <!-- Ukryte pole ID jest kluczowe przy edycji! -->
                <input type="hidden" asp-for="Id" />

                <!-- Sekcja: Obecne zdjęcia -->
                @if (Model.Images != null && Model.Images.Any())
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Obecne zdjęcia:</label>
                        <div class="d-flex gap-2 flex-wrap">
                            @foreach (var img in Model.Images)
                            {
                                <div class="position-relative">
                                    <img src="@img.ImagePath" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;" />
                                    <!-- Tutaj w przyszłości można dodać przycisk "Usuń" dla pojedynczego zdjęcia -->
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Sekcja: Dodaj nowe zdjęcia -->
                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Dodaj nowe zdjęcia</label>
                    <input type="file" name="photos" class="form-control" multiple accept="image/*" />
                    <small class="text-muted">Nowe zdjęcia zostaną dodane do istniejących.</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="control-label fw-bold"></label>
                    <div class="input-group">
                        <input asp-for="Price" class="form-control" type="number" step="0.01" />
                        <span class="input-group-text">PLN</span>
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Category" class="control-label fw-bold">Kategoria</label>
                    <select asp-for="Category" class="form-select">
                        <option value="">-- Wybierz kategorię --</option>
                        <option value="Elektronika">Elektronika</option>
                        <option value="Moda">Moda</option>
                        <option value="Dom i Ogród">Dom i Ogród</option>
                        <option value="Sport i Hobby">Sport i Hobby</option>
                        <option value="Motoryzacja">Motoryzacja</option>
                        <option value="Kultura i Rozrywka">Kultura i Rozrywka</option>
                        <option value="Inne">Inne</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 d-flex gap-2">
                    <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}