@model Market.Web.Models.Auction

@{
    ViewData["Title"] = "Szczegóły Aukcji";
    var mainInfoImage = Model.Images != null && Model.Images.Any() 
                    ? Model.Images.First().ImagePath 
                    : "https://via.placeholder.com/600";
}
<link rel="stylesheet" href="~/css/auctions-form.css" asp-append-version="true" />

<div class="container mt-4">
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary mb-4">Wróć do listy</a>
    </div>

    <div class="card shadow-sm">
        <div class="row g-0">
            
            <div class="col-md-6 p-2">
                @if (Model.Images != null && Model.Images.Any())
                {
                    <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper mySwiper2 rounded border border-secondary mb-2">
                        <div class="swiper-wrapper">
                            @foreach (var img in Model.Images)
                            {
                                <div class="swiper-slide">
                                    <img src="@img.ImagePath" alt="@Model.Title" />
                                </div>
                            }
                        </div>
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>

                    <div thumbsSlider="" class="swiper mySwiper">
                        <div class="swiper-wrapper">
                            @foreach (var img in Model.Images)
                            {
                                <div class="swiper-slide border border-secondary">
                                    <img src="@img.ImagePath" style="object-fit: cover;" alt="thumb" />
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="ratio ratio-4x3 bg-secondary rounded d-flex align-items-center justify-content-center">
                        <span class="text-white fs-5">Brak zdjęć przedmiotu</span>
                    </div>
                }
            </div>

            <div class="col-md-6">
                <div class="card-body h-100 d-flex flex-column ps-md-4">

                    <div class="mb-3">
                        <span class="badge bg-primary bg-opacity-10 text-primary border border-primary mb-2">@Model.Category</span>
                        <h1 class="card-title fw-bold mb-1">@Model.Title</h1>
                        <small class="text-secondary opacity-75">ID oferty: #@Model.Id</small>
                    </div>

                    <div class="p-3 rounded-3 border border-secondary bg-body-tertiary mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="d-block text-secondary small text-uppercase fw-bold mb-1">Aktualna cena</span>
                                <h2 class="text-warning fw-bolder mb-0 display-6">@Model.Price.ToString("N2") <span class="fs-5 text-muted">PLN</span></h2>
                            </div>
                            
                            @if(Model.Quantity > 0)
                            {
                                <div class="text-end text-success">
                                    <i class="bi bi-box-seam fs-3"></i>
                                    <div class="fw-bold small">Dostępne: @Model.Quantity szt.</div>
                                </div>
                            }
                            else
                            {
                                <div class="text-end text-danger">
                                    <i class="bi bi-x-octagon fs-3"></i>
                                    <div class="fw-bold small">Wyprzedane</div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mb-4">
                        <ul class="list-unstyled d-flex flex-column gap-3">
                            <li class="d-flex justify-content-between border-bottom border-secondary border-opacity-25 pb-2">
                                <span class="text-secondary"><i class="bi bi-person-circle text-primary me-2"></i>Sprzedawca</span>
                                <span class="fw-medium">@(Model.User?.UserName ?? "Nieznany")</span>
                            </li>
                            <li class="d-flex justify-content-between border-bottom border-secondary border-opacity-25 pb-2">
                                <span class="text-secondary"><i class="bi bi-calendar-event text-info me-2"></i>Dodano</span>
                                <span>@Model.CreatedAt.ToString("dd.MM.yyyy")</span>
                            </li>
                            <li class="d-flex justify-content-between border-bottom border-secondary border-opacity-25 pb-2">
                                <span class="text-secondary"><i class="bi bi-clock-history text-danger me-2"></i>Koniec aukcji</span>
                                <span class="@(Model.EndDate < DateTime.Now ? "text-danger fw-bold" : "")">
                                    @Model.EndDate.ToString("dd.MM.yyyy HH:mm")
                                </span>
                            </li>
                            <li class="d-flex justify-content-between pb-2">
                                <span class="text-secondary"><i class="bi bi-info-circle text-warning me-2"></i>Status</span>
                                <span class="badge bg-dark border border-secondary">@Model.AuctionStatus</span>
                            </li>
                        </ul>
                    </div>

                    <div class="mt-auto">
                        @if (Model.AuctionStatus == Market.Web.Models.AuctionStatus.Active && Model.Quantity > 0 && Model.EndDate > DateTime.Now)
                        {
                            <a asp-action="Buy" asp-route-id="@Model.Id" class="btn btn-warning w-100 py-3 fw-bold fs-5 shadow-lg text-dark border-0">
                                KUP TERAZ <i class="bi bi-cart-check-fill ms-2"></i>
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary w-100 py-3 fw-bold disabled" disabled>
                                <i class="bi bi-slash-circle me-2"></i> OFERTA NIEDOSTĘPNA
                            </button>
                        }
                    </div>

                </div>
            </div>

            <div class="col-md-12 p-4">
                <h3>Opis produktu:</h3>
                @if(Model.GeneratedByAi)
                {
                    <span class="badge bg-info bg-opacity-10 text-info border border-info mb-2">Opis wygenerowany przez AI</span>
                }


                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/auction-details.js" asp-append-version="true"></script> 
}