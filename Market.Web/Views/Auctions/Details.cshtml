@model Market.Web.Models.Auction

@{
    ViewData["Title"] = "Szczegóły Aukcji";
    var mainInfoImage = Model.Images != null && Model.Images.Any() 
                    ? Model.Images.First().ImagePath 
                    : "https://via.placeholder.com/600";
}

<div class="container mt-4">
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary mb-4">Wróć do listy</a>
    </div>

    <div class="card shadow-sm">
        <div class="row g-0">
            <div class="col-md-6">
                 <img id="mainImage" src="@mainInfoImage" 
                     class="img-fluid rounded-start" alt="@Model.Title" style="width: 100%; height: 400px; object-fit: cover;">
                 
                 @if (Model.Images != null && Model.Images.Count > 1)
                 {
                     <div class="d-flex mt-2 gap-2 overflow-auto p-2">
                         @foreach (var img in Model.Images)
                         {
                             <img src="@img.ImagePath" 
                                  onclick="changeImage(this.src)"
                                  style="width: 80px; height: 80px; object-fit: cover; cursor: pointer; border: 2px solid transparent;" 
                                  onmouseover="this.style.borderColor='#0d6efd'"
                                  onmouseout="this.style.borderColor='transparent'"
                                  class="rounded" />
                         }
                     </div>
                 }
            </div>

            <div class="col-md-6">
                <div class="card-body">
                    <h2 class="card-title">@Model.Title</h2>
                    <h3 class="text-primary">@Model.Price.ToString("C")</h3>
                    
                    <div class="mb-3">
                        @if(Model.Quantity > 0)
                        {
                            <span class="badge bg-success">Dostępnych sztuk: @Model.Quantity</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Produkt wyprzedany</span>
                        }
                    </div>

                    <dl class="row mt-4">
                        <dt class="col-sm-4">Sprzedawca:</dt>
                        <dd class="col-sm-8">@(Model.User?.UserName ?? "Nieznany")</dd>
                        
                        <dt class="col-sm-4">Data dodania:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToShortDateString()</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">@Model.AuctionStatus</dd>
                    </dl>

                    <a asp-action="Buy" asp-route-id="@Model.Id" class="btn btn-success btn-lg w-100 mt-3">Kup Teraz</a>
                </div>
            </div>

            <div class="col-md-12 p-4">
                <h3>Opis produktu:</h3>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function changeImage(src) {
            document.getElementById('mainImage').src = src;
        }
    </script>
}