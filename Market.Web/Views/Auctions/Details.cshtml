@model Market.Web.Models.Auction

@{
    ViewData["Title"] = "Szczegóły Aukcji";
    var mainInfoImage = Model.Images != null && Model.Images.Any() 
                    ? Model.Images.First().ImagePath 
                    : "https://via.placeholder.com/600";
}
<link rel="stylesheet" href="~/css/auctions-form.css" asp-append-version="true" />

<div class="container mt-4">
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary mb-4">Wróć do listy</a>
    </div>

    <div class="card shadow-sm">
        <div class="row g-0">
            
            <div class="col-md-6 p-2">
                @if (Model.Images != null && Model.Images.Any())
                {
                    <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper mySwiper2 rounded border border-secondary mb-2">
                        <div class="swiper-wrapper">
                            @foreach (var img in Model.Images)
                            {
                                <div class="swiper-slide">
                                    <img src="@img.ImagePath" alt="@Model.Title" />
                                </div>
                            }
                        </div>
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>

                    <div thumbsSlider="" class="swiper mySwiper">
                        <div class="swiper-wrapper">
                            @foreach (var img in Model.Images)
                            {
                                <div class="swiper-slide border border-secondary">
                                    <img src="@img.ImagePath" style="object-fit: cover;" alt="thumb" />
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="ratio ratio-4x3 bg-secondary rounded d-flex align-items-center justify-content-center">
                        <span class="text-white fs-5">Brak zdjęć przedmiotu</span>
                    </div>
                }
            </div>

            <div class="col-md-6">
                <div class="card-body">
                    <h2 class="card-title">@Model.Title</h2>
                    <h3 class="text-primary">@Model.Price.ToString("C")</h3>
                    
                    <div class="mb-3">
                        @if(Model.Quantity > 0)
                        {
                            <span class="badge bg-success">Dostępnych sztuk: @Model.Quantity</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Produkt wyprzedany</span>
                        }
                    </div>

                    <dt class="col-sm-4">Data dodania:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToShortDateString()</dd>

                        <dt class="col-sm-4">Koniec aukcji:</dt>
                        <dd class="col-sm-8 text-danger fw-bold">@Model.EndDate.ToString("dd.MM.yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Status:</dt>

                    <dl class="row mt-4">
                        <dt class="col-sm-4">Sprzedawca:</dt>
                        <dd class="col-sm-8">@(Model.User?.UserName ?? "Nieznany")</dd>
                        
                        <dt class="col-sm-4">Data dodania:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToShortDateString()</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">@Model.AuctionStatus</dd>
                    </dl>

                    <a asp-action="Buy" asp-route-id="@Model.Id" class="btn btn-success btn-lg w-100 mt-3">Kup Teraz</a>
                </div>
            </div>

            <div class="col-md-12 p-4">
                <h3>Opis produktu:</h3>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/auction-details.js" asp-append-version="true"></script> 
}