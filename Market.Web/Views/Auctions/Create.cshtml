@model Market.Web.Models.Auction

@{
    ViewData["Title"] = "Dodaj Aukcję";
}

<div class="container mt-4">
    <h2>Wystaw Przedmiot</h2>
    <hr />
    
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nowe pole do wgrywania plików -->
                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Zdjęcia przedmiotu</label>
                    <input type="file" name="photos" class="form-control" multiple accept="image/*" />
                    <small class="text-muted">Możesz wybrać wiele zdjęć naraz.</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" placeholder="Co sprzedajesz?" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="control-label fw-bold"></label>
                    <div class="input-group">
                        <input asp-for="Price" class="form-control" type="number" step="0.01" />
                        <span class="input-group-text">PLN</span>
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="control-label fw-bold"></label>
                    <input asp-for="Quantity" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EndDate" class="control-label fw-bold"></label>
                    <input asp-for="EndDate" 
                           class="form-control" 
                           type="date" 
                           min="@DateTime.Today.ToString("dd-MM-yyyy")" 
                    />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Category" class="control-label fw-bold">Kategoria</label>
                    <select asp-for="Category" class="form-select">
                        <option value="">-- Wybierz kategorię --</option>
                        <option value="Elektronika">Elektronika</option>
                        <option value="Moda">Moda</option>
                        <option value="Dom i Ogród">Dom i Ogród</option>
                        <option value="Sport i Hobby">Sport i Hobby</option>
                        <option value="Motoryzacja">Motoryzacja</option>
                        <option value="Kultura i Rozrywka">Kultura i Rozrywka</option>
                        <option value="Inne">Inne</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                

                <div class="form-group mt-4">
                    <input type="submit" value="Wystaw na Sprzedaż" class="btn btn-primary btn-lg w-100" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Wróć do listy</a>
    </div>

    <button type="button" id="aiButton" class="btn btn-warning mt-3 w-100 fw-bold">
        ✨ Generuj opis aukcji z AI
        <span id="spinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
    </button>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const btnGenerate = document.getElementById('aiButton');
            // Uwaga: Twój obecny przycisk to link <a> kierujący do Index. Musimy zmienić go na <button type="button">
            
            // 1. Zamiana linku na guzik funkcyjny (możesz to zrobić ręcznie w HTML wyżej, ale tu robię to skryptem dla pewności)
            if(btnGenerate) {
                btnGenerate.removeAttribute("href");
                btnGenerate.setAttribute("type", "button");
                btnGenerate.classList.add("btn-warning"); // Zmieniam kolor na żółty/ostrzegawczy dla wyróżnienia
                btnGenerate.classList.remove("btn-success");
                
                // Dodajemy ikonkę ładowania (domyślnie ukryta)
                btnGenerate.innerHTML = `✨ Generuj opis z AI <span id="spinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>`;
                
                btnGenerate.addEventListener("click", async function (e) {
                    e.preventDefault();
                    
                    const fileInput = document.querySelector('input[name="photos"]');
                    if (fileInput.files.length === 0) {
                        alert("Proszę najpierw wybrać zdjęcia produktu!");
                        return;
                    }

                    // Pokaż spinner i zablokuj guzik
                    const spinner = document.getElementById("spinner");
                    spinner.classList.remove("d-none");
                    btnGenerate.disabled = true;

                    const formData = new FormData();
                    // Dodajemy wszystkie pliki do formularza
                    for (let i = 0; i < fileInput.files.length; i++) {
                        formData.append("photos", fileInput.files[i]);
                    }

                    try {
                        const response = await fetch('/Auctions/GenerateDescription', {
                            method: 'POST',
                            body: formData
                        });

                        if (!response.ok) {
                            const err = await response.json();
                            throw new Error(err.error || "Wystąpił błąd serwera");
                        }

                        // Odbieramy dane z serwera
                        const data = await response.json();

                        // Logujemy w konsoli dla pewności (zamiast alertu)
                        console.log("Dane z AI:", data);

                        // --- TUTAJ JEST LOGIKA UZUPEŁNIANIA PÓŁ ---

                        // Uzupełnij Tytuł
                        if (data.title) {
                            document.getElementById("Title").value = data.title;
                        }

                        // Uzupełnij Opis
                        if (data.description) {
                            document.getElementById("Description").value = data.description;
                        }

                        // Uzupełnij Cenę (Zwróć uwagę: JSON ma 'suggestedPrice', a input ma ID 'Price')
                        if (data.suggestedPrice) {
                            document.getElementById("Price").value = data.suggestedPrice;
                        }

                        // Uzupełnij Kategorię
                        // Zadziała tylko jeśli AI zwróciło dokładnie taką nazwę, jaka jest w <option> (np. "Elektronika")
                        if (data.category) {
                            const categorySelect = document.getElementById("Category");
                            // Sprawdzamy czy taka opcja istnieje w selectcie, żeby nie wybrać bzdur
                            let options = Array.from(categorySelect.options);
                            let optionToSelect = options.find(item => item.value === data.category);
                            
                            if (optionToSelect) {
                                categorySelect.value = data.category;
                            } else {
                                console.warn("AI zwróciło kategorię, której nie ma na liście:", data.category);
                            }
                        }

                    } catch (error) {
                        alert("Błąd AI: " + error.message);
                    } finally {
                        // Ukryj spinner i odblokuj guzik
                        spinner.classList.add("d-none");
                        btnGenerate.disabled = false;
                    }
                });
            }
        });
    </script>
}