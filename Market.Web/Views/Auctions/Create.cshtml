@model Market.Web.Models.Auction
@{ ViewData["Title"] = "Dodaj Aukcję"; }

<link rel="stylesheet" href="~/css/auctions-form.css" asp-append-version="true" />

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">Wystaw Przedmiot</h2>
            <small class="text-secondary">Uzupełnij dane ręcznie lub użyj AI</small>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-lg"></i> Anuluj
        </a>
    </div>

    <div id="aiErrorAlert" class="alert alert-danger d-none" role="alert">
        <strong>Ups! Coś poszło nie tak z AI:</strong> <span id="aiErrorMessage"></span>
    </div>

    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- GALERIA SWIPER (Domyślnie ukryta d-none, JS ją pokaże) -->
        <div id="galleryContainer" class="d-none mb-4">
            <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper mySwiper2 rounded border border-secondary mb-2">
                <div class="swiper-wrapper" id="mainSwiperWrapper"></div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
            <div thumbsSlider="" class="swiper mySwiper">
                <div class="swiper-wrapper" id="thumbSwiperWrapper"></div>
            </div>
        </div>

        <!-- INPUT I PRZYCISK AI -->
        <div class="row g-3 mb-4"> 
            <div class="col-12">
                <label class="form-label fw-bold">Zdjęcia przedmiotu</label>
                <!-- Tutaj id="photosInput" jest kluczowe dla JS -->
                <input type="file" name="photos" id="photosInput" class="form-control bg-dark text-light border-secondary" multiple accept="image/*" />
            </div>

            <div class="col-12">
                <button type="button" id="aiButton" class="btn btn-warning w-100 fw-bold shadow-sm py-3">
                    ✨ Generuj opis z AI
                    <span id="spinner" class="spinner-border spinner-border-sm d-none ms-2" role="status" aria-hidden="true"></span>
                </button>
            </div>
        </div>

        <!-- POLA FORMULARZA -->
        <partial name="_AuctionFormFields" model="Model" />

        <div class="mt-4">
            <input type="submit" value="Wystaw na Sprzedaż" class="btn btn-primary btn-lg w-100 py-3 fw-bold" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/auction-create.js" asp-append-version="true"></script> 
}