@model Market.Web.Models.Auction

@{
    ViewData["Title"] = "Dodaj Aukcję";
}

<div class="container mt-4">
    <h2>Wystaw Przedmiot</h2>
    <hr />
    
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" placeholder="Co sprzedajesz?" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="control-label fw-bold"></label>
                    <div class="input-group">
                        <input asp-for="Price" class="form-control" type="number" step="0.01" />
                        <span class="input-group-text">PLN</span>
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="control-label fw-bold"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Link do zdjęcia (opcjonalnie)" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Wystaw na Sprzedaż" class="btn btn-primary btn-lg w-100" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Wróć do listy</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}