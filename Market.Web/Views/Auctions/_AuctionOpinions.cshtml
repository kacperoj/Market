@model IEnumerable<Market.Web.ViewModels.OpinionDetailViewModel>

@if (Model != null && Model.Any())
{
    <div class="collapse mt-3 border-top pt-3 bg-opacity-25 rounded px-2 bg-dark bg-gradient" id="opinions-@ViewData["AuctionId"]">
        <h6 class="fw-bold text-muted mb-3 small text-uppercase ls-1 px-1">
            Opinie kupujÄ…cych (@Model.Count())
        </h6>
        
        <div class="d-flex flex-column gap-2 mb-2 pe-1" style="max-height: 300px; overflow-y: auto;">
            @foreach(var op in Model)
            {
                <div class="p-3 rounded border shadow-sm bg-dark">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <span class="fw-bold small">
                            <i class="bi bi-person-circle me-1 text-secondary"></i>@op.BuyerName
                        </span>
                        <span class="text-muted x-small">@op.DateFormatted</span>
                    </div>
                    
                    <div class="text-warning small mb-1">
                        @for(int i=1; i<=5; i++)
                        {
                            if(i <= op.Rating) 
                            { 
                                <i class="bi bi-star-fill text-warning"></i> 
                            }
                            else 
                            { 
                                <i class="bi bi-star text-secondary opacity-25"></i>
                            }
                        }
                    </div>
                    
                    <p class="mb-0 small fst-italic text-secondary">@op.Comment</p>
                </div>
            }
        </div>
    </div>
}