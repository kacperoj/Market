@using Market.Web.ViewModels 
@using Market.Web.Models
@model AdminAuctionsListViewModel

@{
    ViewData["Title"] = "Zarządzanie Aukcjami";
    Layout = "_Layout";
}

<div class="container mt-5 pb-5">
    
    <!-- Nagłówek i Statystyki -->
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="fw-bold mb-0">Zarządzanie Aukcjami</h2>
            <p class="opacity-75 mb-0">Panel administratora</p>
        </div>
        <div>
           <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
               <i class="bi bi-people me-2"></i>Przełącz na Użytkowników
           </a>
        </div>
    </div>

    <!-- Pasek Filtrowania (Styl spójny z Users) -->
    <div class="card shadow-sm mb-5">
        <div class="card-body p-4">
            <form asp-action="Auctions" method="get" class="row g-3">
                <div class="col-md-6">
                    <input type="text" name="searchString" value="@Model.SearchString" 
                           class="form-control" placeholder="Szukaj (Tytuł, opis, email sprzedawcy)..." />
                </div>
                <div class="col-md-4">
                    <select name="sortOrder" class="form-select" onchange="this.form.submit()">
                        <!option value="" @(string.IsNullOrEmpty(Model.SortOrder) ? "selected" : "")>Najnowsze</!option>
                        <!option value="price_asc" @(Model.SortOrder == "price_asc" ? "selected" : "")>Cena: Rosnąco</!option>
                        <!option value="price_desc" @(Model.SortOrder == "price_desc" ? "selected" : "")>Cena: Malejąco</!option>
                        <!option value="status" @(Model.SortOrder == "status" ? "selected" : "")>Status (Zablokowane pierwsze)</!option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100 fw-bold">Filtruj</button>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Auctions.Any())
    {
        <div class="text-center py-5 opacity-50">
            <h5>Brak aukcji spełniających kryteria.</h5>
        </div>
    }
    else
    {
        <div class="d-flex flex-column gap-4">
            @foreach (var auction in Model.Auctions)
            {
                <div class="card shadow-sm overflow-hidden mb-4)">
                    <div class="card-body p-0">
                        
                        <div class="d-flex align-items-center bg-light bg-opacity-10 border-bottom" 
                             style="height: 160px; overflow-x: auto; overflow-y: hidden; white-space: nowrap;">
                            
                            @if (auction.ImagePaths.Any())
                            {
                                <div class="px-2">
                                    @foreach (var imgPath in auction.ImagePaths)
                                    {
                                        <a href="@imgPath" target="_blank" class="d-inline-block h-100 p-2">
                                            <img src="@imgPath" class="shadow-sm border" 
                                                 style="height: 140px; width: auto; object-fit: contain; border-radius: 8px; background: white;" 
                                                 alt="Foto aukcji" />
                                        </a>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="w-100 h-100 d-flex align-items-center justify-content-center opacity-50">
                                    <span><i class="bi bi-camera me-2"></i>Brak zdjęć</span>
                                </div>
                            }
                        </div>

                        <div class="row g-0 p-3 align-items-center">
                            
                            <div class="col-md-4 px-3 border-end d-flex flex-column justify-content-center">
                                <h5 class="fw-bold mb-1 text-truncate" title="@auction.Title">
                                    <a asp-controller="Auctions" asp-action="Details" asp-route-id="@auction.Id" class="text-decoration-none text-reset">
                                        @auction.Title
                                    </a>
                                </h5>

                                <div class="small text-muted mb-2">
                                    <i class="bi bi-person-circle me-1"></i>
                                    <strong>@auction.SellerDisplayName</strong> 
                                    <span class="opacity-75">(@auction.SellerEmail)</span>
                                </div>

                                <div class="small text-muted fst-italic mb-2 border-start ps-2 text-truncate" style="font-size: 0.85rem;">
                                    "@auction.ShortDescription"
                                </div>

                                <div class="d-flex align-items-center gap-2 mt-auto">
                                    <span class="badge border border-secondary text-secondary bg-transparent rounded-pill fw-normal">
                                        @auction.Category
                                    </span>
                                    <span class="small opacity-50" title="Data utworzenia">
                                        <i class="bi bi-calendar-plus me-1"></i>@auction.CreatedAt.ToShortDateString()
                                    </span>
                                     <a asp-controller="Auctions" asp-action="Details" asp-route-id="@auction.Id" 
                                       class="btn btn-outline-secondary btn-sm rounded-pill px-3 ms-auto">
                                        Podgląd
                                    </a>
                                </div>
                            </div>

                            <div class="col-md-3 px-4 border-end py-2">
                                <h4 class="text-warning fw-bold mb-1">@auction.Price.ToString("C")</h4>

                                <div class="d-flex flex-wrap gap-2 mb-2">
                                    <!-- 1. STATUS -->
                                    <span class="badge @GetBadgeClass(auction.Status) rounded-pill fw-normal d-inline-flex align-items-center px-3 py-2">
                                        @auction.Status
                                    </span>
                                    
                                    <!-- 2. FAKTURA VAT -->
                                    @if(auction.IsCompanySale)
                                    {
                                        <span class="badge text-primary border border-primary rounded-pill fw-normal d-inline-flex align-items-center px-3 py-2">
                                            Faktura VAT
                                        </span>
                                    }

                                    @if(auction.GeneratedByAi)
                                    {
                                        <span class="badge text-info border border-info rounded-pill fw-normal d-inline-flex align-items-center px-3 py-2">
                                            AI
                                        </span>
                                    }
                                </div>

                                <div class="small text-muted" style="font-size: 0.85rem;">
                                    <div class="mb-1">
                                        <i class="bi bi-box-seam me-2 w-25"></i>Ilość: <strong>@auction.Quantity</strong>
                                    </div>
                                    <div class="@(auction.IsExpired ? "text-danger fw-bold" : "")">
                                        <i class="bi bi-hourglass-split me-2 w-25"></i>Do: @auction.EndDate.ToShortDateString()
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-5 d-flex flex-column justify-content-center gap-2 px-3">
                                
                                <div class="d-flex flex-column gap-2 w-100">
                                    @if(auction.IsBanned)
                                    {
                                        @if(!string.IsNullOrEmpty(auction.BannedNote))
                                        {
                                            <div class="alert alert-danger py-1 px-2 mt-2 mb-0" style="font-size: 0.75rem;">
                                                <strong>Blokada:</strong> @auction.BannedNote
                                            </div>
                                        }
                                         <form asp-action="ToggleAuctionBan" method="post" class="align-self-end">
                                            <input type="hidden" name="id" value="@auction.Id" />
                                            <button type="submit" class="btn btn-success btn-sm rounded-pill px-3 fw-bold mt-1">
                                                <i class="bi bi-arrow-counterclockwise me-1"></i> Przywróć
                                            </button>
                                        </form>
                                    }
                                </div>

                                @if(!auction.IsBanned)
                                {
                                    <form asp-action="ToggleAuctionBan" method="post">
                                        <input type="hidden" name="id" value="@auction.Id" />
                                        
                                        <div>
                                            <textarea name="reason" class="form-control" rows="4" 
                                                      placeholder="Podaj powód blokady..." required 
                                                      style="resize: none; font-size: 0.9rem; border-radius: 15px;"></textarea>
                                            
                                            <button type="submit" class="btn btn-outline-danger btn-sm mt-2" 
                                                    onclick="return confirm('Zablokować tę ofertę?');">
                                                Zablokuj
                                            </button>
                                        </div>
                                    </form>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Paginacja -->
        <nav class="mt-5">
            <ul class="pagination justify-content-center">
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link border bg-transparent" asp-action="Auctions"
                       asp-route-pageNumber="@(Model.CurrentPage - 1)"
                       asp-route-searchString="@Model.SearchString"
                       asp-route-sortOrder="@Model.SortOrder">
                        &laquo; Poprzednia
                    </a>
                </li>
                <li class="page-item disabled mx-2">
                    <span class="page-link border-0 bg-transparent fw-bold">
                        Strona @Model.CurrentPage z @Model.TotalPages
                    </span>
                </li>
                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link border bg-transparent" asp-action="Auctions"
                       asp-route-pageNumber="@(Model.CurrentPage + 1)"
                       asp-route-searchString="@Model.SearchString"
                       asp-route-sortOrder="@Model.SortOrder">
                        Następna &raquo;
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

@functions {
    string GetBadgeClass(AuctionStatus status)
    {
        return status switch
        {
            AuctionStatus.Active => "bg-success bg-opacity-10 text-success border border-success",
            AuctionStatus.Banned => "bg-danger bg-opacity-10 text-danger border border-danger",
            AuctionStatus.Suspended => "bg-warning bg-opacity-10 text-warning border border-warning",
            AuctionStatus.Sold => "bg-secondary bg-opacity-10 text-secondary border border-secondary",
            AuctionStatus.Expired => "bg-dark text-white",
            _ => "bg-info text-dark"
        };
    }
}