@using Market.Web.Core.ViewModels 
@using Market.Web.ViewModels
@model UsersListViewModel

@{
    ViewData["Title"] = "Lista Użytkowników";
    Layout = "_Layout";
}

<div class="container mt-5 pb-5">
    
    <!-- Nagłówek i Statystyki -->
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="fw-bold mb-0">Zarządzanie Użytkownikami</h2>
            <p class="opacity-75 mb-0">Panel administratora</p>
        </div>
        <div>
            <div>
           <a asp-action="Auctions" class="btn btn-primary rounded-pill px-4 mb-3">
               <i class="bi bi-card-list me-2"></i>Przełącz na Aukcje
           </a>
            </div>
            <span class="border rounded px-3 py-2">
                Użytkowników: <strong>@Model.Users.Count</strong>
            </span>
        </div>
    </div>

    <!-- Pasek Wyszukiwania -->
    <div class="card shadow-sm mb-5">
        <div class="card-body p-4">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-6">
                    <input type="text" name="searchString" value="@Model.SearchString" 
                           class="form-control" placeholder="Szukaj (Email, Nazwisko, NIP, ID)..." />
                </div>
                <div class="col-md-4">
                    <select name="sortOrder" class="form-select" onchange="this.form.submit()">
                        <!option value="" @(string.IsNullOrEmpty(Model.SortOrder) ? "selected" : "")>Sortuj: Nazwisko (A-Z)</!option>
                        <!option value="name_desc" @(Model.SortOrder == "name_desc" ? "selected" : "")>Sortuj: Nazwisko (Z-A)</!option>
                        <!option value="email_asc" @(Model.SortOrder == "email_asc" ? "selected" : "")>Sortuj: Email (A-Z)</!option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100 fw-bold">Filtruj</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista Użytkowników -->
    @if (!Model.Users.Any())
    {
        <div class="text-center py-5 opacity-50">
            <h5>Brak danych do wyświetlenia.</h5>
        </div>
    }
    else
    {
        <div class="d-flex flex-column gap-3">
            @foreach (var user in Model.Users)
            {
                <div class="card shadow-sm overflow-hidden">
                    <div class="card-body p-0">
                        <!-- GŁÓWNY WIERSZ (ZAWSZE WIDOCZNY) -->
                        <div class="row g-0 align-items-center p-3">
                            
                            <!-- Kolumna 1: Dane podstawowe (4/12) -->
                            <div class="col-md-4 d-flex flex-column justify-content-center px-3 border-end">
                                <h5 class="fw-bold mb-1">@user.FullName</h5>
                                <div class="opacity-75 mb-2">@user.Email</div>
                                
                                <div class="d-flex gap-2 flex-wrap align-items-center">
                                    <!-- Status konta -->
                                    @if (user.IsBlocked)
                                    {
                                        <span class="badge bg-danger rounded-pill fw-normal">ZABLOKOWANY</span>
                                    }
                                    else
                                    {
                                        <span class="badge border border-success text-success bg-transparent rounded-pill fw-normal">AKTYWNY</span>
                                    }

                                    
                                    <!-- Status Firmy -->
                                    @if(user.HasCompany)
                                    {
                                        <span class="badge border border-warning text-warning bg-transparent rounded-pill fw-normal">FIRMA</span>
                                    }

                                     <button class="btn btn-outline-secondary btn-sm rounded-pill px-4" type="button" data-bs-toggle="collapse" data-bs-target="#details-@user.Id">
                                        Pełne dane
                                    </button>
                                </div>
                            </div>

                            <!-- Kolumna 2: Krótkie info (3/12) -->
                            <div class="col-md-3 px-4 py-2">
                                <div class="small mb-1">
                                    <span class="opacity-50 me-2">Liczba aukcji:</span>
                                    <strong>@user.AuctionCount</strong>
                                </div>
                                <div class="small mb-1">
                                    <span class="opacity-50 me-2">Telefon:</span>
                                    <span>@(string.IsNullOrEmpty(user.PhoneNumber) ? "-" : user.PhoneNumber)</span>
                                </div>
                                @if(!user.EmailConfirmed)
                                {
                                     <div class="small text-warning">
                                        <span class="me-2">Email niepotwierdzony!</span>
                                    </div>
                                }
                                else 
                                {
                                     <div class="small text-success opacity-75">
                                        <span class="me-2">Email zweryfikowany</span>
                                    </div>
                                }
                            </div>

                            <!-- Kolumna 3: Akcje i Blokada (5/12) -->
                            <div class="col-md-5 d-flex flex-column justify-content-center gap-2">
                                
                                <!-- Górny rząd przycisków -->
                                <div class="d-flex justify-content-end gap-2">
                                    @if (user.IsBlocked)
                                    {
                                        <form asp-action="ToggleBlockUser" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-success rounded-pill px-4 fw-bold">
                                                Odblokuj
                                            </button>
                                        </form>
                                    }
                                </div>

                                <!-- Dolna sekcja: Formularz blokowania (tylko dla niezablokowanych) -->
                                @if (!user.IsBlocked)
                                {
                                    <form asp-action="ToggleBlockUser" method="post">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        
                                        <div>
                                            <textarea name="reason" class="form-control" rows="4" 
                                                      placeholder="Podaj powód blokady..." required 
                                                      style="resize: none; font-size: 0.9rem; border-radius: 15px;"></textarea>
                                            
                                            <button type="submit" class="btn btn-outline-danger btn-sm mt-2" 
                                                    onclick="return confirm('Czy na pewno zablokować tego użytkownika?');">
                                                Zablokuj
                                            </button>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>

                        <!-- PANEL ROZWIJANY (PEŁNE DANE) -->
                        <div class="collapse border-top" id="details-@user.Id">
                            <div class="p-3">
                                <div class="row g-4">
                                    
                                    <!-- 1. DANE SYSTEMOWE -->
                                    <div class="col-lg-4">
                                        <h6 class="text-uppercase opacity-50 small fw-bold mb-3 border-bottom pb-2">Systemowe</h6>
                                        <div class="mb-2">
                                            <small class="d-block opacity-50">User ID (GUID):</small>
                                            <span class="font-monospace small text-break">@user.Id</span>
                                        </div>
                                        <div class="mb-2">
                                            <small class="d-block opacity-50">Telefon:</small>
                                            <span>@(string.IsNullOrEmpty(user.PhoneNumber) ? "(Brak)" : user.PhoneNumber)</span>
                                        </div>
                                         <div class="mb-2">
                                            <small class="d-block opacity-50">Status weryfikacji:</small>
                                            <span>@(user.EmailConfirmed ? "Potwierdzony" : "Niepotwierdzony")</span>
                                        </div>
                                    </div>

                                    <!-- 2. DANE PRYWATNE (WYSYŁKA) -->
                                    <div class="col-lg-4">
                                        <h6 class="text-uppercase opacity-50 small fw-bold mb-3 border-bottom pb-2">Profil Prywatny / Wysyłka</h6>
                                        <div class="mb-3">
                                            <small class="d-block opacity-50">Adres:</small>
                                            @if(!string.IsNullOrEmpty(user.AddressStreet))
                                            {
                                                <div>@user.AddressStreet</div>
                                                <div>@user.AddressPostalCode @user.AddressCity</div>
                                            }
                                            else
                                            {
                                                <span class="fst-italic opacity-50">Brak danych adresowych</span>
                                            }
                                        </div>
                                        <div class="mb-2">
                                            <small class="d-block opacity-50">Prywatny numer IBAN:</small>
                                            @if(!string.IsNullOrEmpty(user.PrivateIBAN))
                                            {
                                                <span class="font-monospace">@user.PrivateIBAN</span>
                                            }
                                            else
                                            {
                                                <span class="fst-italic opacity-50">Brak numeru konta</span>
                                            }
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <h6 class="text-uppercase opacity-50 small fw-bold mb-3 border-bottom pb-2">Profil Firmowy</h6>
                                        @if(user.HasCompany)
                                        {
                                            <div class="mb-2">
                                                <small class="d-block opacity-50">Nazwa Firmy:</small>
                                                <span class="fw-bold">@user.CompanyName</span>
                                            </div>
                                            <div class="mb-2">
                                                <small class="d-block opacity-50">NIP:</small>
                                                <span class="fw-bold">@user.NIP</span>
                                            </div>
                                            <div class="mb-2">
                                                <small class="d-block opacity-50">Adres fakturowy:</small>
                                                <span>@user.CompanyAddress</span>
                                            </div>
                                            <div class="mb-2">
                                                <small class="d-block opacity-50">Firmowy nr IBAN:</small>
                                                @if(!string.IsNullOrEmpty(user.CompanyIBAN))
                                                {
                                                    <span class="font-monospace">@user.CompanyIBAN</span>
                                                }
                                                else
                                                {
                                                    <span class="fst-italic opacity-50">Brak</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="opacity-50 fst-italic">Użytkownik nie posiada profilu firmowego.</span>
                                        }
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>

        <!-- Paginacja -->
        <nav class="mt-5">
            <ul class="pagination justify-content-center">
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link border bg-transparent" asp-action="Index"
                       asp-route-pageNumber="@(Model.CurrentPage - 1)"
                       asp-route-searchString="@Model.SearchString"
                       asp-route-sortOrder="@Model.SortOrder">
                        &laquo; Poprzednia
                    </a>
                </li>
                 <li class="page-item disabled mx-2">
                    <span class="page-link border-0 bg-transparent fw-bold">
                        Strona @Model.CurrentPage z @Model.TotalPages
                    </span>
                </li>
                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link border bg-transparent" asp-action="Index"
                       asp-route-pageNumber="@(Model.CurrentPage + 1)"
                       asp-route-searchString="@Model.SearchString"
                       asp-route-sortOrder="@Model.SortOrder">
                        Następna &raquo;
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>